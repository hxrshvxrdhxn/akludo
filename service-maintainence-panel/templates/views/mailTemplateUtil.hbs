{{!< default}}
<div class="container-fluid">
	<form action="/util/templates" method="post">
		<div class="jumbotron">
			<div class="row">
				<div class="col-md-6 col-sm-6 col-lg-6">
					<h4>Source</h4>
					<hr style="border-top: 1px solid grey;">
					<textarea required name="html" id="html" rows="50" style="width: 100%;"
							  onkeyup="jQuery('iframe').get(0).contentWindow.document.querySelector('body').innerHTML = jQuery('#html').val()">{{html}}</textarea>
				</div>
				<div class="col-md-6 col-sm-6 col-lg-6">
					<h4>Preview</h4>
					<hr style="border-top: 1px solid grey;">
					<iframe frameborder="0" style="width: 100%; height: 1000px;">
					</iframe>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12" style="background: #ccc;padding: 10px;">
					<button type="submit" class="btn btn-success" style="float: right">SEND MAIL</button>
					<input class="form-control" type="email" name="email" id="email" required style="float: right; width: 200px;" value="{{email}}"
						   placeholder="your email id">
				</div>
			</div>
		</div>
	</form>
</div>
<script type="text/javascript">
	setTimeout(function () {
		jQuery('#html').keyup();
	}, 1000);
</script>
